<div  class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |message| %>
        <%= "error" %>
        <%= message %>
        <% end %>
        <% end %>
        <%= form_with model:@user, local:true do |f| %>
          <label for="inputName">Name</label>
          <p><%= f.text_field :name, autofocus: true, id:"inputName"%></p>
          <label for="inputImage">Image</label>
          <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
          <label for="inputIntroduction">Introduction</label>
          <p><%= f.text_area :introduction, id:"inputIntroduction" %></p>
          <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>